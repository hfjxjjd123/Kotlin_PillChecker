<?xml version="1.0" encoding="utf-8"?>
<!-- checkbox_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle for the border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Set to the border color -->
            <size android:width="12dp" android:height="12dp" /> <!-- Adjust the size as needed -->
        </shape>
    </item>

    <item
        android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary" />
        </shape>
    </item>

        <item android:drawable="@drawable/ic_check_24" android:gravity="center" />
</layer-list>
