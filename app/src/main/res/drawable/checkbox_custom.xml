<?xml version="1.0" encoding="utf-8"?>
<!-- checkbox_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle for the border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Set to the border color -->
            <size android:width="24dp" android:height="24dp" /> <!-- Adjust the size as needed -->
        </shape>
    </item>

    <item
        android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary" /> <!-- Set to the fill color -->
        </shape>
    </item>
</layer-list>
